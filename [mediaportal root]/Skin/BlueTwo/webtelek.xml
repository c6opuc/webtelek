<window>
  <id>6900</id>
  <defaultcontrol>1</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <autohidetopbar>yes</autohidetopbar>
  <define>#header.label:  </define>
  <controls>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
		<control>
			<description>Logo</description>
			<type>image</type>
			<id>2</id>
			<posX>5</posX>
			<posY>5</posY>
			<width>210</width>
      			<keepaspectratio>yes</keepaspectratio>
			<texture>webtelek_logotype.gif</texture>
		</control>
    		<control>
    			<description>ChannelLogo</description>
      			<type>image</type>
      			<id>6</id>
      			<posX>250</posX>
      			<posY>0</posY>
      			<width>70</width>
      			<height>70</height>
      			<texture></texture>
      			<keepaspectratio>yes</keepaspectratio>
      			<centered>yes</centered>
      			<animation effect="fade" time="200">WindowOpen</animation>
      			<animation effect="fade" time="200">WindowClose</animation>
    		</control>

		<control>
		<type>group</type>
			<description>group element</description>			
			<posX>10</posX>
			<posY>90</posY>
			<layout>StackLayout</layout>
			<control>
				<description>Favorites</description>
				<type>button</type>
				<id>7</id>
				<posX>20</posX>
				<posY>110</posY>
				<label>#favorites</label>
				<align>left</align>
			</control>
			<control>
				<description>Select country</description>
				<type>button</type>
				<id>4</id>
				<posX>20</posX>
				<posY>160</posY>      			
				<label>#select</label>
				<align>left</align>
			</control>
			<control>
      				<description>Select category</description>
      				<type>button</type>
      				<id>9</id>
      				<posX>20</posX>
      				<posY>210</posY>      			
      				<label>#archive</label>
      				<align>left</align>
    			</control>
			<control>
      				<description>others</description>
      				<type>button</type>
      				<id>8</id>
      				<posX>20</posX>
      				<posY>260</posY>      			
      				<label>#others</label>
      				<ondown>99</ondown>
      				<align>left</align>
    			</control>
		</control>
			<control>
				<description>Current category</description>
				<type>label</type>
				<id>5</id>
				<posX>250</posX>
				<posY>90</posY>
				<label>#Header</label>
				<font>font16</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control>
		<control>
      			<description>Channels</description>
      			<type>listcontrol</type>
      			<id>10</id>
			<posX>250</posX>
      			<posY>120</posY>
      			<width>450</width>
      			<height>440</height>
			<textXOff>30</textXOff>
			<textYOff>2</textYOff>
			<textXOff2>478</textXOff2>
			<textYOff2>2</textYOff2>
			<textXOff3>486</textXOff3>
			<textYOff3>2</textYOff3>
      			<spaceBetweenItems>8</spaceBetweenItems>
      			<textureHeight>35</textureHeight>
      			<keepaspectratio>no</keepaspectratio>
      			<font2>font10</font2>
      			<font3>font12</font3>
      			<onleft>7</onleft>
      			<onright>7</onright>
		</control>
		<control>
   			<type>textboxscrollup</type>
      			<description>Channel-Info</description>
      			<id>11</id>
      			<posX>20</posX>
      			<posY>230</posY>
      			<width>200</width>
      			<height>150</height>
			<font>font12</font>
      			<label>#ChannelInfo</label>
      			<textcolor>ffffffff</textcolor>
		</control>
	</controls>
</window>